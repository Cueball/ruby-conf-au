.container-full.pl-0
  .row
    -# .col-lg-3.col-md-4
    -#   .avatar.schedule-avatar
    -#     %img{ src: event.image, width: '100%' }
    .col-lg-12.event-container
      %h3.timeline-title= event.title
      - if !event.ticketed?
        %span All conference attendees are welcome!
      %p
        = event.description
      %p
        %a{ href: event.location_link, target: '_blank' }
          %i.fa.fa-map-marker-alt
          = event.location_text


