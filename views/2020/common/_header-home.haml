%header
	.container-full.header-home
		.row.mr-0
			.col-lg-6
				.header-content.pl-5
					%img{src:"/2020/images/ruby-01.svg", width: '35%', class: 'logo'}
					%h1.header-title.mt-2.mb-4
						Welcome to
						%br/
						RubyConfAu
					%h3.header-lead 
						Our yearly gathering to celebrate
						%br/
						the Australian and broader Ruby community
					.header-details.mt-4
						%p
							%i.fa.fa-calendar-alt
							20th - 21st Feburary 2020
						%p.ml-5
							%i.fa.fa-map-marker-alt
							Town Hall, 90-130 Swanston St, Melbourne
			.col-lg-6
				%img{src: "/2020/images/testing.png", width: '100%', class: 'pr-5 header-img'}
		.row.scroll-down
			.col-lg-12
				%img{src: "/2020/images/blob.svg", width: '15%', class: 'blob'}