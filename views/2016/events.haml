%section.body-section--event
  .body-section__container
    #carousel-q1.carousel.slide.event__image-slide{ 'data-ride': 'carousel', 'data-interval': 'false' }
      %ol.carousel-indicators
        %li.active{ data: { target: '#carousel-q1', 'slide-to': 0 } }
        %li{ data: { target: '#carousel-q1', 'slide-to': 1 } }
      .carousel-inner{ role: 'listbox' }
        .item.active
          %img{ src: '/images/2016/events/q1/eastern-spire.jpg' }
          .carousel-caption
        .item
          %img{ src: '/images/2016/events/q1/interior.jpg' }
          .carousel-caption
      %a.left.carousel-control{ href: '#carousel-q1', role: 'button', 'data-slide': 'prev' }
        %span.icon-prev.event__control{ 'aria-hidden': 'true'}
        %span.sr-only Previous
      %a.right.carousel-control{ href: '#carousel-q1', role: 'button', 'data-slide': 'next' }
        %span.icon-next.event__control{ 'aria-hidden': 'true'}
        %span.sr-only Next
